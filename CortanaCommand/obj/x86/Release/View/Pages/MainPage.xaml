<Page x:ConnectionId='1'
    x:Class="CortanaCommand.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CortanaCommand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >
    

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- VisualStateManagerで横幅が小、中、大の3つのStateを定義しています。各StateはAdaptiveTriggerによって自動的に遷移します。 -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualStateGroup.Transitions>
                    <VisualTransition GeneratedDuration="0:0:1">
                        <VisualTransition.GeneratedEasingFunction>
                            <CubicEase EasingMode="EaseInOut"/>
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>
                <VisualState x:ConnectionId='3' x:Name="MobileState">
                    <VisualState.Setters>
                        <Setter Target="splitView.(SplitView.DisplayMode)" Value="Overlay"/>
                        <Setter Target="splitView.(SplitView.IsPaneOpen)" Value="False"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="NormalState">
                    <VisualState.Setters>
                        <Setter Target="splitView.(SplitView.IsPaneOpen)" Value="False"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="WideState">
                    <VisualState.Setters>
                        <Setter Target="paneButton.(ToggleButton.IsChecked)" Value="True"/>
                        <Setter Target="splitView.(SplitView.IsPaneOpen)" Value="True"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource ApplicationThemeBrush}" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="270"/>
            </Grid.ColumnDefinitions>
            <!--SplitViewの開閉を行うToglleButton SplitViewのIsOpenPaneプロパティとバインドされているのでボタンを押すとSplitViewが開閉する-->
            <ToggleButton x:ConnectionId='13' x:Name="paneButton" Width="48" Height="48" Grid.Column="0" Style="{StaticResource SplitViewToggleButtonStyle}" IsChecked="{Binding ElementName=splitView,Path=IsPaneOpen,Mode=TwoWay}">
                <FontIcon Glyph="{StaticResource SplitViewButtonGlyph}" Foreground="White" />
            </ToggleButton>
            <!--検索ボックス-->

        </Grid>
        <!--SplitView IsOpenPaneとDisplayModeで様々な画面に対応します-->
        <SplitView x:ConnectionId='6' x:Name="splitView" DisplayMode="CompactInline" CompactPaneLength="48" OpenPaneLength="250" Grid.Row="1">
            <!--SplitViewのペイン部分-->
            <SplitView.Pane>
                <Grid Background="{StaticResource SplitViewBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="54"/>
                    </Grid.RowDefinitions>

                    <!--SplitViewのPaneにあるナビゲーションボタン 特殊なAppBarButtonのStyleを適用している。詳しくはApp.xaml.cs-->
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <AppBarButton x:ConnectionId='8' x:Name="appButtonEditor" Foreground="White" Icon="Microphone" Label="コマンドエディタ" Style="{StaticResource SplitViewAppBarButtonStyle}" Width="Auto"                               />
                        <AppBarButton x:ConnectionId='9' x:Name="appButtonXml" Foreground="White" Icon="Page2" Label="登録済みXML" Style="{StaticResource SplitViewAppBarButtonStyle}" Width="Auto"                            />
                        <AppBarButton x:ConnectionId='10' x:Name="appButtonPreview" Foreground="White" Icon="Volume" Label="発話例" Style="{StaticResource SplitViewAppBarButtonStyle}" Width="Auto"                                />
                        <AppBarButton x:ConnectionId='11' x:Name="appButtonHelp" Icon="Help" Label="使い方" Foreground="White" Style="{StaticResource SplitViewAppBarButtonStyle}" Width="Auto"                            ></AppBarButton>
                    </StackPanel>

                    <!--SplitViewのPaneにある設定ボタン-->
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <Rectangle Height="1" Fill="#FF5F5F5F" />
                        <AppBarButton x:ConnectionId='7' x:Name="appButtonSetting" Foreground="White" Icon="Setting" Label="設定" Style="{StaticResource SplitViewAppBarButtonStyle}" Width="Auto"                                />
                    </StackPanel>
                </Grid>
            </SplitView.Pane>
            <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Auto">-->
                <!--このFrameにいろいろなページをNavigateすることでページを切り替える-->
                <Frame x:ConnectionId='12' x:Name="frameContent" MinWidth="800"></Frame>
            <!--</ScrollViewer>-->
        </SplitView>
        <CommandBar HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Top" Background="{x:Null}" Grid.RowSpan="2" >
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Upload" Label="Update" Foreground="White" Command="{Binding UpdateCortanaCommand}"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
        
    </Grid>
    
</Page>

