<Page
    x:Class="CortanaCommand.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CortanaCommand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>

    </Page.Resources>
    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromVerticalOffset="0" FromHorizontalOffset="-80" />
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{StaticResource ApplicationThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" BorderBrush="{StaticResource ApplicationThemeBrush}" BorderThickness="1">
                <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Command" VerticalAlignment="Center" Foreground="{StaticResource ApplicationThemeBrush}" FontSize="21.333"/>
            </Grid>
            <ListBox x:ConnectionId='2' x:Name="listBox_command" Margin="0" Grid.Row="1" Background="White" ItemsSource="{Binding CommandList}" BorderBrush="{StaticResource ApplicationThemeBrush}" BorderThickness="1"                                                     ItemContainerStyle="{StaticResource ListBoxItemStyle}" CanDrag="True">
                <ListBox.Transitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition/>
                    </TransitionCollection>
                </ListBox.Transitions>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid x:ConnectionId='3' x:Name="gridListTemplate"                                            Height="30">
                            <TextBlock Text="{Binding Name}" FontSize="18" />
                            <FlyoutBase.AttachedFlyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem x:ConnectionId='4' x:Name="menuItemDelete" Text="削除"                              />
                                </MenuFlyout>
                            </FlyoutBase.AttachedFlyout>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <CommandBar VerticalAlignment="Bottom" Grid.Row="1">
                <CommandBar.PrimaryCommands>
                    <AppBarButton Icon="Add" Label="Add" Command="{Binding AddCommandCommand}" />
                </CommandBar.PrimaryCommands>
            </CommandBar>
        </Grid>
        <Frame x:ConnectionId='1' x:Name="frameCommand" Grid.Column="1"></Frame>

    </Grid>
</Page>

